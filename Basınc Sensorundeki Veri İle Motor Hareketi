

*****ARDUÄ°NO KODU  




#include <MAVLink.h> // MAVLink kÃ¼tÃ¼phanesi 

#define SYSID 255 

#define COMPID MAV_COMP_ID_SYSTEM_CONTROL 

 

mavlink_message_t msg; 

mavlink_status_t status; 

 

// Hedef derinlik (metre cinsinden) â€” bardakta test iÃ§in kÃ¼Ã§Ã¼k 

float hedef_derinlik = 0.005; // cm 

float P0 = -1; // BaÅŸlangÄ±Ã§ta tanÄ±msÄ±z 

 

// PID kontrol parametreleri 

float Kp = 100.0; 

float Ki = 0.0; 

float Kd = 30.0; 

 

float integral = 0; 

float previous_error = 0; 

unsigned long last_time = 0; 

 

void setup() { 

Serial.begin(115200); // Bilgisayara log iÃ§in 

Serial1.begin(57600); // Pixhawk MAVLink baÄŸlantÄ±sÄ± (TELEM2) 

delay(3000); 

Serial.println("ðŸ“¡ Derinlik kontrolÃ¼ baÅŸlatÄ±ldÄ±..."); 

} 

 

void loop() { 

while (Serial1.available() > 0) { 

uint8_t c = Serial1.read(); 

 

if (mavlink_parse_char(MAVLINK_COMM_0, c, &msg, &status)) { 

// Gelen mesaj SCALED_PRESSURE2 ise 

if (msg.msgid == MAVLINK_MSG_ID_SCALED_PRESSURE2) { 

mavlink_scaled_pressure2_t pressure; 

mavlink_msg_scaled_pressure2_decode(&msg, &pressure); 

 

float basinc_hPa = pressure.press_abs; // [hPa] cinsinden mutlak basÄ±nÃ§ 

float derinlik = hesapla_derinlik(basinc_hPa); 

 

kontrol_motor(derinlik); // PID kontrol uygula 

} 

} 

} 

} 

 

float hesapla_derinlik(float basinc_hPa) { 

float rho = 997.0; // Suyun yoÄŸunluÄŸu 

float g = 9.80665; // YerÃ§ekimi 

 

if (P0 < 0) { 

P0 = basinc_hPa; // Ä°lk Ã¶lÃ§Ã¼mde kalibre et (hava basÄ±ncÄ±) 

Serial.print("ðŸ”§ BaÅŸlangÄ±Ã§ basÄ±ncÄ± (P0): "); 

Serial.println(P0); 

} 

 

float P = (basinc_hPa - P0) * 100.0; // hPa â†’ Pascal 

float h = P / (rho * g); 

 

if (h < 0) h = 0; 

return h; 

} 

 

 

//  PID kontrol hesapla ve 5-6. motorlara PWM gÃ¶nder 

void kontrol_motor(float olculen_derinlik) { 

unsigned long now = millis(); 

float dt = (now - last_time) / 1000.0; 

if (dt <= 0) return; 

last_time = now; 

 

float error = hedef_derinlik - olculen_derinlik; 

integral += error * dt; 

float derivative = (error - previous_error) / dt; 

previous_error = error; 

 

float output = Kp * error + Ki * integral + Kd * derivative; 

 

int pwm = 1500 + (int)output; // 1500 nÃ¶tr 

pwm = constrain(pwm, 1300, 1700); // GÃ¼venli aralÄ±k 

 

// ðŸ” YalnÄ±zca 5 ve 6. motorlara gÃ¶nder 

motor_pwm_gonder(5, pwm); 

motor_pwm_gonder(6, pwm); 

 

// ðŸ“‹ Log yazdÄ±r 

Serial.print("Derinlik: "); 

Serial.print(olculen_derinlik, 3); 

Serial.print(" m | PWM: "); 

Serial.println(pwm); 

} 

 

// ðŸ“¨ MAVLink Ã¼zerinden motorlara PWM gÃ¶nder 

void motor_pwm_gonder(uint8_t motor_no, uint16_t pwm) { 

mavlink_message_t msg; 

uint8_t buf[MAVLINK_MAX_PACKET_LEN]; 

 

mavlink_msg_command_long_pack( 

SYSID, COMPID, &msg, 

1, 1, // target_system, target_component 

MAV_CMD_DO_SET_SERVO, // Komut tipi 

0, // confirmation 

motor_no, pwm, 0, 0, 0, 0, 0 // parametreler: kanal, pwm deÄŸeri 

); 

 

uint16_t len = mavlink_msg_to_send_buffer(buf, &msg); 

Serial1.write(buf, len); 

} 
